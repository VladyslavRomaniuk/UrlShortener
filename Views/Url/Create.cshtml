@model Url
<partial name="_Notification"/>
<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Create shortened URL</h2>
            <hr />
        </div>
        <div class="mb-3">
            <label asp-for="FullUrl">Full Url</label>
            <input asp-for="FullUrl" class="form-control"/>
            <span asp-validation-for="FullUrl" class="text-danger"></span>
        </div>
        <div class="mb-3">
            <label asp-for="Description">Description</label>
            <input asp-for="Description" class="form-control"/>
            <span asp-validation-for="Description" class="text-danger"></span>
        </div>
        
        <button type="submit" class="btn btn-primary" style="width: 150px">Create</button>
        <a asp-controller="Url" asp-action="Table" class="btn btn-secondary">Go Back</a>
    </div>
</form>